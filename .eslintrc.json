{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "jest": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prefer-stateless-function": 0,
    "react/forbid-prop-types": 0,
    "function-paren-newline": 0,
    "arrow-body-style": 2,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/*.stories.js", "**/*.test.js" ]
      }
    ]
  }
}